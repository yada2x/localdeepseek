{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022", 
      "DOM"
    ],
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "dist",
    "allowJs": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}
